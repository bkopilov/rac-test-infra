apiVersion: nmstate.io/v1
kind: NodeNetworkConfigurationPolicy
metadata:
  name: {{bridge_name}}
spec:
  desiredState:
    interfaces:
      - bridge:
          options:
            stp:
              enabled: false
          port:
            - name: {{bridge_port}}
        ipv4:
          dhcp: true
          enabled: true
        name: {{bridge_name}}
        state: up
        type: linux-bridge
